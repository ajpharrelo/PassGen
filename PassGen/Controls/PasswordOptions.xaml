<UserControl x:Class="PassGen.Controls.PasswordOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PassGen.Controls"
             xmlns:model="clr-namespace:PassGen"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="150">
    <StackPanel>
        <CheckBox FontSize="15" IsChecked="{Binding UpperCase, Mode=TwoWay}" Content="Upper case characters"></CheckBox>
        <CheckBox FontSize="15" IsChecked="{Binding LowerCase, Mode=TwoWay}" Content="Lower case characters"></CheckBox>
        <CheckBox FontSize="15" IsChecked="{Binding SpecialChars, Mode=TwoWay}" Content="Special characters"></CheckBox>
        <CheckBox FontSize="15" IsChecked="{Binding Numbers, Mode=TwoWay}" Content="Numbers"></CheckBox>
    </StackPanel>
</UserControl>
